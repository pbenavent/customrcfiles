" from https://dougblack.io/words/a-good-vimrc.html
set cursorline          " highlight current line
set nu                  " show line numbers
syntax enable           " enable syntax processing
set showmatch           " highlight matching [{()}]
set background=dark     " darker looks better with putty
set showcmd             " show command in bottom bar

" personal VIM preferences
set noai
set background=dark	" background: light or dark
set colorcolumn=80	" highlight at 80 column

